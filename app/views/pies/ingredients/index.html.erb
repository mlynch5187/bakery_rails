<h1>Pie Ingredients</h1>

<% @ingredients.each do |ingredient| %>
  Name: <%= link_to "#{ingredient.name}", "/pies/ingredients/#{ingredient.id}" %>
  Kind: <%= "#{ingredient.kind}" %>
  <%= link_to "Update #{ingredient.name}", "/pies/ingredients/#{ingredient.id}", method: :patch %></br></br>
  <%= link_to "Delete #{ingredient.name}", "/pies/ingredients/#{ingredient.id}", method: :delete %></br></br>
<% end %>

<%= link_to "New Ingredient", "/pies/ingredients/new" %>
