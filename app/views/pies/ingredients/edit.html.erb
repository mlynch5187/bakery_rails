<h1>Edit <%=link_to ingredient.name, "/items/#{ingredient.id}" %></h1>

<center>
  <%= form_tag "/items/#{ingredient.id}", method: :patch  do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, "#{ingredient.name}"%>

    <%= label_tag :kind %>
    <%= text_field_tag :kind, "#{ingredient.kind}" %>

    <%= submit_tag 'Update Ingredient' %>
  <% end %>
</center>
