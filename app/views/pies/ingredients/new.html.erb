<h1 align= "center">Create New Ingredient</h1>
<center>
  <%= form_tag '/pies/ingredients/', method: :post do |f| %>

    <%= label_tag :name %>
    <%= text_field_tag :name, nil, :required => true %>

    <%= label_tag :kind %>
    <%= text_field_tag :kind, nil, :required => true %>

    <%= submit_tag 'Create New Ingredient' %>
  <% end %>
</center>
