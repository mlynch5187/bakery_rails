<h1 align= "center">Create New Ingredient</h1>
<%= flash[:notice]%>
<center>
  <%= form_tag '/bakers', method: :post do |f| %>

    <%= label_tag :name %>
    <%= text_field_tag :name, nil, :required => true %>

    <%= label_tag :job %>
    <%= text_field_tag :job, nil, :required => true %>

    <%= label_tag :age %>
    <%= text_field_tag :age, nil, :required => true %>

    <%= submit_tag 'Create New Baker' %>
  <% end %>
</center>
